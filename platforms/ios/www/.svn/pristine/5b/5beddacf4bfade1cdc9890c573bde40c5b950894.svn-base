
<div id="myOrdersList" class="tkList"> </div>

<p style="display: none">
    <textarea id="tpl_myorderslist">
        <ul>
            {#foreach $T as Item}
                <li id="{$T.Item.order_sn}" order-status="{$T.Item.code}">
                    <a href="#">
                        <img src="{$T.Item.goods_thumb}" />
                        <strong>订单日期：{$T.Item.add_time}</strong>
                            <span>
                                订单编号：{$T.Item.order_sn}
                                <br/>
                                 总价：{$T.Item.total_fee}元&nbsp;&nbsp;&nbsp;&nbsp;状态：{$T.Item.status}
                            </span>
                        <em></em>
                    </a>
                </li>
            {#/for}
        </ul>
    </textarea>
</p>