<div class="usermessage">
    <ul class="list">
        <li><h6 style="text-align: center;">消息为空</h6></li>
    </ul>
</div>
<script>

    ;
</script>
<p style="display: none">
                        <textarea id="tpl_myUserMessage">
                            <ul class="list">
                                {#foreach $T as Item}
                                <li class="swipe-reveal">
                                    <div class="tag">删除</div>
                                    <div href="#" class="swipe-content">
                                        <h3>{$T.Item.messageSender}</h3>
                                        <time>{$T.Item.messageReceiveTime}</time>
                                        <p {#if
                                           $T.Item.messageStatus=="0"}class="message"{#else}class="unreadMessage"{#/if}>
                                            {$T.Item.messageContent}</p>

                                        <div class="message-info">
                                            <input type="hidden" class="messageId" value="{$T.Item.messageId}"/>
                                            <input type="hidden" class="messageTitle" value="{$T.Item.messageTitle}"/>
                                            <input type="hidden" class="messageContent"
                                                   value="{$T.Item.messageContent}"/>
                                            <input type="hidden" class="messageReceiveTime"
                                                   value="{$T.Item.messageReceiveTime}"/>
                                            <input type="hidden" class="messageReceiveDtlTime"
                                                   value="{$T.Item.messageReceiveDtlTime}"/>
                                            <input type="hidden" class="messageStatus" value="{$T.Item.messageStatus}"/>
                                            <input type="hidden" class="messageSender" value="{$T.Item.messageSender}"/>
                                        </div>
                                    </div>
                                    <div class="swipe-hidden">
                                        <a class="message button archive" id="{$T.Item.messageId}">删除</a>
                                    </div>


                                </li>
                                {#/for}
                            </ul>
                        </textarea>
</p>