<div class="input-group forgetPassword" align="center">
    <input type="text" id="userMobile" required="required" maxlength="11"
           pattern="^1[3|4|5|8][0-9]\d{4,8}$"  placeholder="请输入手机号码">

    <div class="veriGroup">
        <input type="text"  id="forgetVericode"  placeholder="请输入验证码">
        <a id="forgetSendCode" class="button blue">发送验证码</a>
    </div>
    <a id="toResetPassword" class="button blue confirm">确定</a>
</div>


