<style>
    div#addressAdd form#addAddressForm div.addressBg {
        overflow: auto;
        min-height: 4rem;
    }

    div#addressAdd form#addAddressForm div.addressBg select {
        position: inherit;
        left: 0;
        padding: 0;
        width: 33%;
        margin-right: 3%;
    }

    div#addressAdd form#addAddressForm div.addressBg select.long {
        position: inherit;
        left: 0;
        float: left;
        left: 25%;
        width: 70%;
    }

    div#addressAdd form#addAddressForm div.addressBg label.error {
        display: block;
        color: red;
        position: inherit;
        float: left;
        left: 25%;
        padding: 0;
        margin-bottom: 0.2rem;
    }

    div#addressAdd form#addAddressForm div.addressBg span {
        position: inherit;
        top: 1.3rem;
        width: 25%;
        float: left;
    }

    div#addressAdd form#addAddressForm div.addressBg input[type="text"] {
        width: 75%;
        height: 2.5rem;
        text-indent: 0;
        padding: 0;
        position: inherit;
        border: 0;
        line-height: normal;
        float: left;
        margin: 0;
    }
</style>

<div class="addTips" id="addAddressMessage"></div>

<form id="addAddressForm" check_status="false">
<div class="addressBg">
    <span>收货人姓名：</span>
        <input name="address_consignee" type="text" placeholder="请填写真实姓名" />
</div>
<div class="addressBg">
    <span>配送区域：</span>

    <select name="address_province" id="addAddress_province">
        <option value="-1"> --请选择--  </option>
    </select>
    <select name="address_city" id="addAddress_city">
        <option value="-1"> --请选择--  </option>
    </select>
    <select name="address_district" class="long" id="addAddress_district">
        <option value="-1"> --请选择--  </option>
    </select>
    
    <p style="display: none">
        <textarea id="address_itemAdd">
            <option value="-1"> --请选择--  </option>
            {#foreach $T as Item}
            <option value="{$T.Item.region_id}">{$T.Item.region_name}</option>
            {#/for}        
        </textarea>
    </p>
</div>

<div class="addressBg">
    <span>详细地址：</span>
        <input name="address_address" type="text" placeholder="不少于5个字" />
</div>
<div class="addressBg">
    <span>邮政编码：</span>
        <input name="address_zipcode" type="text" maxlength="6" placeholder="6位数字" />
</div>
<div class="addressBg">
    <span>固定电话：</span>
        <input name="address_tel" type="text" maxlength="8" placeholder="8位数字" />
</div>
<div class="addressBg">
    <span>手机号码：</span>
        <input id="addressAdd_mobile" name="address_mobile" type="text" maxlength="11" placeholder="11位数字" />
    </div>

    <div class="addressBg">
        <a class="blueBtn" onclick="AddAddress()">提交</a>
</div>
</form>

