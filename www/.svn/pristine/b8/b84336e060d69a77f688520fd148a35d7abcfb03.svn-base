<div class="list1 searchList">

    <ul id="searchResultList">

    </ul>

</div>



<div class="tuijianT">推荐商品</div>

<div id="searchResultRecommend" class="tuijianCon">



</div>

<p style="display: none">
    <textarea id="tpl_searchResultList">
        {#foreach $T as Item}
        <li id="{$T.Item.goods_sn}">

            <a href="#">

                <img src="{$T.Item.goods_thumb}" />

                <p>{$T.Item.goods_name}</p>

                <div>{$T.Item.recommend_title}</div>

                <span>{$T.Item.shop_price}元</span>

                <em>总销量 {$T.Item.sales_number}</em>

            </a>

        </li>
        {#/for}
        <div class="clear"></div>
    </textarea>
    <textarea id="tpl_searchResultRecommend">
        {#foreach $T as Item}
        <a href="#">

            <img src="{$T.Item.thumb}" />

            <span>{$T.Item.goods_price}元</span>

        </a>
        {#/for}
        <div class="clear"></div>
    </textarea>
</p>



<script type="text/javascript">

    $(".listTitle a").click(function(){

        if($(this).hasClass("cur")){

            return false;

        }else{

            $(this).addClass("cur").siblings().removeClass("cur");

        }

    });

</script>



