<div class="listTitle">

    <a id="listBySales" onclick="listBy(this.id);" class="cur">销量</a>

    <a id="listByNew" onclick="listBy(this.id);" class="">新品</a>

    <a id="listByPrice" onclick="listBy(this.id);" class="">价格</a>

    <a id="listByPopular" onclick="listBy(this.id);" class="">人气</a>

    <a onclick="changeDisplay();" style="width:16%;" class=""><img src="images/listMenu2.jpg"/></a>

</div>


<!--显示切换方式在这里：切换list1和list2-->
<!--<div class="list1">-->
<div id="goodsListDiv" class="list2">
    <ul id="goodsList">

    </ul>

</div>

<div class="tuijianT">推荐商品</div>

<div id="recommendGoods" class="tuijianCon">

</div>

<p style="display: none">
    <textarea id="tpl_goodsList">
        {#foreach $T as Item}
            <li id="{$T.Item.goods_sn}">

                <a>

                    <img src="{$T.Item.goods_thumb}" />

                    <p>{$T.Item.goods_name}</p>

                    <div>{$T.Item.recommend_title}</div>

                    <span>{$T.Item.shop_price}元</span>

                    <em>总销量 {$T.Item.sales_number}</em>

                </a>

            </li>
        {#/for}
    </textarea>
    <textarea id="tpl_recommendGoods">
        {#foreach $T as Item}
        <a href="#">

            <img src="{$T.Item.thumb}" />

            <span>{$T.Item.goods_price}元</span>

        </a>
        {#/for}
        <div class="clear"></div>

    </textarea>
</p>

<script type="text/javascript">

    $(".listTitle a").click(function(){

        if($(this).hasClass("cur")){

            return false;

        }else{

            $(this).addClass("cur").siblings().removeClass("cur");

        }

    });

</script>















































