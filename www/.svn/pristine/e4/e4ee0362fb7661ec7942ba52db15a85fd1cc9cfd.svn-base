 <div class="carList" id="cartGoodsList"> </div>
 <div class="fixedBuy">
 	应付总额：<strong id="totalMoney"></strong>元
    <a href="#">立即购买</a>
 </div>

 <p style="display:none">
	<textarea id="tpl_cartgoodslist">
	    <h4>
        <div class="checkAll">
            <div class="check checked" id="checkAll"></div>全选
        </div>
        <div class="delAll"></div>
    </h4>
    	<ul>
			{#foreach $T as Item}
        		<li id="{$T.Item.rec_id}" >
            		<div class="check checked" id='checkbox' price="{$T.Item.goods_price}" sku_sn="{$T.Item.sku_sn}" goods_sn="{$T.Item.goods_sn}"></div>
            		<img src="{$T.Item.goods_thumb}" />
            		<strong>{$T.Item.goods_name}{$T.Item.goods_sn}</strong>
                	<span>  商城价：{$T.Item.goods_price}元</span>
            		<div class="putNum"> 
                		<a onclick="minusCount1({$T.Item.rec_id})">-</a>
                		<input id="quantity{$T.Item.rec_id}" type="text" value="{$T.Item.goods_number}" >
                		<a onclick="plusCount1({$T.Item.rec_id})">+</a> 
                	</div>
            		<a href="#" class="del">删除</a>
        </li>        
	 {#/for}
    </ul>
  </textarea>
</p>



